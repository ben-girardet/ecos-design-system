{
  "name": "@ecos/ecos-design-system",
  "description": "Design system based on FAST, compatible with Aurelia2, 11ty and more",
  "version": "0.1.2",
  "main": "dist/commonjs/index.js",
  "module": "dist/native-modules/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ben-girardet/ecos-design-system"
  },
  "license": "MIT",
  "dependencies": {
    "@microsoft/fast-components": "^1.19.1",
    "@microsoft/fast-element": "^1.0.1",
    "lodash-es": "^4.17.21",
    "modular-scale": "^5.1.0"
  },
  "devDependencies": {
    "@aurelia/testing": "latest",
    "@aurelia/webpack-loader": "latest",
    "@types/modular-scale": "^5.1.1",
    "@types/node": "^14.14.35",
    "@types/prismjs": "^1.16.5",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "aurelia": "latest",
    "aurelia-direct-router": "*",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.1.3",
    "eslint": "^7.22.0",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "html-webpack-plugin": "^5.3.1",
    "htmlhint": "^0.14.2",
    "modern-css-reset": "^1.4.0",
    "postcss": "^8.2.8",
    "postcss-loader": "^5.2.0",
    "prismjs": "^1.23.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.27.2",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "lint:js": "eslint src test --ext .js,.ts",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html",
    "prebuild": "rimraf dist",
    "postbuild": "gulp",
    "build:commonjs": "tsc --rootDir src/ecos-design-system --project tsconfig2.json --outDir dist/commonjs --module commonjs",
    "build:native-modules": "tsc --rootDir src/ecos-design-system --project tsconfig2.json --outDir dist/native-modules --module es2015",
    "build": "concurrently \"npm run build:commonjs\" \"npm run build:native-modules\"",
    "start": "webpack serve",
    "build-app": "rimraf dist-app && webpack --env production",
    "analyze": "rimraf dist-app && webpack --env production --analyze"
  }
}
